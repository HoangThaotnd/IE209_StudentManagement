<?xml version="1.0" encoding="utf-8" ?>
<xf:BottomBarPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  x:Class="StudentManagement.Views.MainPage"
                  xmlns:xf="clr-namespace:BottomBar.XamarinForms"
                  xmlns:views="clr-namespace:StudentManagement.Views;assembly=StudentManagement"
                  Title="{Binding PageTitle}">

  <NavigationPage Title="ViewA">
        <x:Arguments>
            <views:A/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="ViewB">
        <x:Arguments>
            <views:B Title="ViewB"/>
        </x:Arguments>
    </NavigationPage>

  <ContentPage Title="Nearby"
                 Icon="ic_favorites.png"
                 xf:BottomBarPageExtensions.TabColor="#7B1FA2" >
      <Button Text="cccc"
              Command="{Binding CCommand}"/>
  </ContentPage>

    <ContentPage Title="Recents"
                 Icon="ic_recents.png"
                 xf:BottomBarPageExtensions.TabColor="#FF5252"
                 xf:BottomBarPageExtensions.BadgeCount="2"
                 xf:BottomBarPageExtensions.BadgeColor="Black" />

    <ContentPage Title="Restaurants"
                 Icon="ic_restaurants.png"
                 xf:BottomBarPageExtensions.TabColor="#FF9800" />

</xf:BottomBarPage>